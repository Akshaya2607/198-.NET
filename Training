CREATE TABLE [dbo].[Training](
	[EmpId] [int] NULL,
	[BatchNo] [int] NULL,
	[BatchName] [nvarchar](50) NULL,
	[Courses] [nvarchar](50) NULL,
	[StartDate] [date] NULL,
	[EndDate] [date] NULL,
	[Status] [varchar](10) NULL,
	[TrainerId] [int] NULL,
	[ManagerId] [int] NULL
) ON [PRIMARY]

GO

SET ANSI_PADDING OFF
GO

