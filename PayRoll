CREATE TABLE [dbo].[PayRoll](
	[EmpId] [int] NULL,
	[BankAccountNo] [int] NOT NULL,
	[ProvidentFundNo] [int] NULL,
	[BasicPay] [int] NULL,
	[HRA] [int] NULL,
	[MedicalAllowance] [int] NULL,
	[Tax] [int] NULL,
	[Bonus] [int] NULL,
	[GrossPay] [int] NULL,
	[NoOfWorkDays] [int] NULL,
 CONSTRAINT [PK_PayRoll] PRIMARY KEY CLUSTERED 
(
	[BankAccountNo] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON) ON [PRIMARY]
) ON [PRIMARY]

GO

ALTER TABLE [dbo].[PayRoll]  WITH CHECK ADD  CONSTRAINT [FK_PayRoll_EmployeeDetails] FOREIGN KEY([EmpId])
REFERENCES [dbo].[EmployeeDetails] ([EmployeeId])
GO

ALTER TABLE [dbo].[PayRoll] CHECK CONSTRAINT [FK_PayRoll_EmployeeDetails]
GO


